<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Dashboard">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/SideBarDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/template_toolbar" />

            <ScrollView
                android:id="@+id/svScrollView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/Toolbar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/Toolbar"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/placeholder_grey_roundcorners"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Approval Pending"
                        android:textSize="22dp" />

                    <ImageView
                        android:id="@+id/ivImageViewSelfie"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_below="@+id/tvTitle"
                        android:layout_centerInParent="true"
                        android:contentDescription="Make sure your camera is clean!"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_pending" />
                    <TextView
                        android:id="@+id/tvLoginMsgPrompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/ivImageViewSelfie"
                        android:fontFamily="@font/poppins_regular"
                        android:text="All set! you'll be able to use the app once your account is approved."
                        android:textSize="18dp"
                        android:gravity="center"
                        android:textColor="@color/black"/>
                </RelativeLayout>
            </ScrollView>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BtnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Next"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:includeFontPadding="false"
                android:background="@drawable/placeholder_grey_roundcorners"
                android:backgroundTint="#161B21"/>
        </RelativeLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</RelativeLayout>